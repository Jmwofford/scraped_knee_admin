<p id="notice"><%= notice %></p>

<h1>Players</h1>
<%= link_to 'New Player', new_player_path %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Height</th>
      <th>Jersey num</th>
      <th>Position</th>
      <th>Teamname</th>
      <th>Allstar?</th>
      <th>Player link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.height %></td>
        <td><%= player.jersey_num %></td>
        <td><%= player.position %></td>
        <td><%= player.teamName %></td>
        <td><%= player.isAllStar %></td>
        <td><%= player.player_link %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


